<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/fangkuang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/fang" />

    <ImageView
        android:id="@+id/touxiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/fangkuang"
        android:layout_alignBottom="@+id/fangkuang"
        android:src="@drawable/touxiang" />

    <LinearLayout
        android:id="@+id/meiriyilian_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fangkuang"
        android:paddingLeft="120dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/meiriyilian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每日一练"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/zuijinxuexi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="根据最近学习的马克思精讲6推荐"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/lianxu_linearlyout"
        android:paddingLeft="80dp"
        android:layout_alignLeft="@+id/touxiang"
        android:layout_alignBottom="@+id/fangkuang"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/lianxu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连续打卡30天，打败70%的用户"
            android:textSize="15sp"
            android:paddingBottom="10dp"/>

        <TextView
            android:id="@+id/dengji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等级：高中生"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/jianchi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="继续坚持10天晋升为超级学霸"
            android:textSize="10sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/circle"
        android:src="@drawable/circle"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jingshengguize"
            android:textSize="10sp"
            android:text="晋升规则" />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/jianjiao"
            android:src="@drawable/jianjiao" />
    </LinearLayout>

</RelativeLayout>
